<!DOCTYPE html>
<html lang="<%= (user && user.preferred_language) || 'en' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= t('flexusage.new', 'Register Flex Usage') %> - Grumpy Tracker</title>
    <link href="/public/tailwind.css" rel="stylesheet">
  </head>
  <body class="bg-grumpy-dark min-h-screen flex flex-col font-sans text-grumpy-offwhite">
    <%- include('partials/menu', { user, csrfToken, currentPath: request.path }) %>
    <main class="flex-1 flex flex-col items-center items-start mt-8">
      <div class="w-full max-w-lg bg-grumpy-dark2 shadow-2xl rounded-2xl p-10 border border-grumpy-orange">
        <form method="post">
          <h1 class="text-xl font-bold text-grumpy-orange mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-grumpy-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3"/></svg>
            <%= t('flexusage.new', 'Register Flex Usage') %>
          </h1>
          <% if (error) { %>
            <div class="bg-red-100 text-red-700 p-2 rounded mb-2"><%= error %></div>
          <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="mb-4">
            <label class="block mb-1 font-semibold" for="date"><%= t('date', 'Date') %></label>
            <input id="date" type="date" name="date" class="w-full border rounded p-2 bg-grumpy-dark text-grumpy-offwhite" value="<%= flexusage.date || '' %>" required />
          </div>
          <div class="mb-4 flex items-center gap-2">
            <input id="full_day" type="checkbox" name="full_day" <%= flexusage.full_day ? 'checked' : '' %> class="rounded border-grumpy-orange text-grumpy-orange focus:ring-grumpy-orange" />
            <label for="full_day" class="font-semibold"><%= t('flexusage.full_day', 'Full Day') %></label>
          </div>
          <div id="partial-time-fields" class="mb-4 <%= flexusage.full_day ? 'hidden' : '' %>">
            <div class="mb-2">
              <label class="block mb-1 font-semibold" for="start_time"><%= t('flexusage.start_time', 'Start Time (minutes from midnight)') %></label>
              <input id="start_time" type="number" name="start_time" min="0" max="1439" class="w-full border rounded p-2 bg-grumpy-dark text-grumpy-offwhite" value="<%= flexusage.start_time || '' %>" />
            </div>
            <div class="mb-2">
              <label class="block mb-1 font-semibold" for="end_time"><%= t('flexusage.end_time', 'End Time (minutes from midnight)') %></label>
              <input id="end_time" type="number" name="end_time" min="0" max="1439" class="w-full border rounded p-2 bg-grumpy-dark text-grumpy-offwhite" value="<%= flexusage.end_time || '' %>" />
            </div>
            <div>
              <label class="block mb-1 font-semibold" for="amount"><%= t('flexusage.amount', 'Amount (minutes)') %></label>
              <input id="amount" type="number" name="amount" min="1" max="1440" class="w-full border rounded p-2 bg-grumpy-dark text-grumpy-offwhite" value="<%= flexusage.amount || '' %>" />
            </div>
          </div>
          <div class="mb-4">
            <label class="block mb-1 font-semibold" for="comments"><%= t('comments', 'Comments') %></label>
            <textarea id="comments" name="comments" class="w-full border rounded p-2 bg-grumpy-dark text-grumpy-offwhite"><%= flexusage.comments || '' %></textarea>
          </div>
          <button type="submit" class="bg-grumpy-orange text-grumpy-dark2 px-4 py-2 rounded font-semibold w-full mt-2 hover:bg-grumpy-dark2 hover:text-grumpy-orange border border-grumpy-orange transition"><%= t('save', 'Save') %></button>
        </form>
      </div>
    </main>
    <script>
      document.getElementById('full_day').addEventListener('change', function() {
        document.getElementById('partial-time-fields').classList.toggle('hidden', this.checked);
      });
    </script>
    <%- include('partials/footer') %>
  </body>
</html>
