<!DOCTYPE html>
<html lang="<%= (user && user.preferred_language) || 'en' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= t('time_entries', 'Time Entries') %> - Grumpy Tracker</title>
    <link href="/public/tailwind.css" rel="stylesheet">
  </head>
  <body class="bg-grumpy-dark min-h-screen flex flex-col font-sans text-grumpy-offwhite">
    <!-- Remove duplicate header and logo, only keep menu -->
    <%- include('partials/menu', { user, csrfToken, currentPath: request.path }) %>
    <main class="flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-4xl bg-grumpy-dark2 shadow-2xl rounded-2xl p-10 border border-grumpy-orange">
        <table class="w-full table-auto border border-grumpy-orange rounded-2xl shadow mb-6">
          <thead class="bg-grumpy-dark2 text-grumpy-orange">
            <tr>
              <th><%= t('date', 'Date') %></th>
              <th><%= t('work_start', 'Start') %></th>
              <th><%= t('work_end', 'End') %></th>
              <th><%= t('break', 'Break') %></th>
              <th><%= t('travel', 'Travel') %></th>
              <th><%= t('extra_time', 'Extra') %></th>
              <th><%= t('comments', 'Comments') %></th>
              <th><%= t('actions', 'Actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% entries.forEach(function(entry) { %>
              <tr class="even:bg-grumpy-dark hover:bg-grumpy-dark2 transition">
                <td><%= entry.date %></td>
                <td><%= entry.work_start_time %></td>
                <td><%= entry.work_end_time %></td>
                <td><%= entry.break_start_time && entry.break_end_time ? entry.break_start_time + ' - ' + entry.break_end_time : '' %></td>
                <td><%= entry.travel_start_time && entry.travel_end_time ? entry.travel_start_time + ' - ' + entry.travel_end_time : '' %></td>
                <td><%= entry.extra_time || '' %></td>
                <td><%= entry.comments || '' %></td>
                <td>
                  <a href="/time/<%= entry.id %>/edit" class="text-grumpy-orange underline hover:text-grumpy-offwhite transition"><%= t('edit', 'Edit') %></a>
                  <form method="post" action="/time/<%= entry.id %>/delete" class="inline" onsubmit="return confirm('<%= t('delete_entry_confirm', 'Delete entry?') %>');">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit" class="text-red-700 underline ml-2 hover:text-grumpy-orange transition"><%= t('delete', 'Delete') %></button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <%- include('partials/flex-summary', { flexToday, flexTotal }) %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
