<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Time Entries - Grumpy Tracker</title>
  <link href="/public/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <header class="bg-blue-900 text-white p-4">
    <h1 class="text-2xl font-bold">Time Entries</h1>
    <a href="/time/new" class="text-blue-200 underline">+ New Entry</a>
    <a href="/time/summary" class="text-blue-700 underline ml-4">Summary</a>
  </header>
  <main class="flex-1 p-4">
    <table class="w-full table-auto border">
      <thead>
        <tr>
          <th>Date</th>
          <th>Work Start</th>
          <th>Work End</th>
          <th>Breaks</th>
          <th>Travel</th>
          <th>Extra</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <% entries.forEach(e => { %>
          <tr>
            <td><%= e.date.toISOString().slice(0,10) %></td>
            <td><%= e.work_start_time.toISOString().slice(11,16) %></td>
            <td><%= e.work_end_time.toISOString().slice(11,16) %></td>
            <td>
              <% (e.break_start_time || []).forEach((b, i) => { %>
                <div><%= b.toISOString().slice(11,16) %> - <%= (e.break_end_time[i]||'').toISOString().slice(11,16) %></div>
              <% }) %>
            </td>
            <td>
              <% if (e.travel_start_time) { %>
                <div><%= e.travel_start_time.toISOString().slice(11,16) %> - <%= e.travel_end_time ? e.travel_end_time.toISOString().slice(11,16) : '' %></div>
              <% } %>
            </td>
            <td><%= e.extra_time ? e.extra_time + ' min' : '' %></td>
            <td><%= e.comments %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <footer class="bg-gray-200 text-center p-2 text-xs">&copy; <%= new Date().getFullYear() %> Grumpy Tracker</footer>
</body>
</html>
