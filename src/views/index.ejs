<!DOCTYPE html>
<html lang="<%= (user && user.preferred_language) || 'en' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grumpy Tracker</title>
    <link href="/public/tailwind.css" rel="stylesheet">
  </head>
  <body class="bg-grumpy-dark min-h-screen flex flex-col font-sans text-grumpy-offwhite">
    <header class="bg-grumpy-dark2 text-grumpy-offwhite p-4 shadow-lg flex items-center gap-4">
      <img src="/public/logo.png" alt="Grumpy Tracker Logo" class="h-12 w-12 rounded-full bg-grumpy-dark2 border-2 border-grumpy-orange shadow" />
      <h1 class="text-3xl font-extrabold tracking-tight text-grumpy-offwhite">Grumpy Tracker</h1>
    </header>
    <main class="flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-lg bg-grumpy-dark2 shadow-2xl rounded-2xl p-10 border border-grumpy-orange">
        <% if (typeof flexToday !== 'undefined') { %>
          <% include('partials/flex-summary', { flexToday, flexTotal }) %>
        <% } %>
        <% if (user) { %>
          <p class="text-xl mb-6"><%= t('welcome', 'Welcome!') %> <span class="font-semibold text-grumpy-orange"><%= user.name %></span>!</p>
          <a href="/time" class="block w-full text-center bg-grumpy-orange hover:bg-grumpy-dark2 text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition mb-3 border border-grumpy-orange"><%= t('view_time_entries', 'View Time Entries') %></a>
          <a href="/profile" class="block w-full text-center bg-grumpy-dark2 hover:bg-grumpy-orange text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition mb-3 border border-grumpy-orange"><%= t('profile') %></a>
          <a href="/settings" class="block w-full text-center bg-grumpy-dark2 hover:bg-grumpy-orange text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition mb-3 border border-grumpy-orange"><%= t('settings') %></a>
          <form method="post" action="/logout" class="mt-4">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button type="submit" class="block w-full text-center bg-grumpy-dark2 hover:bg-grumpy-orange text-grumpy-orange hover:text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition border border-grumpy-orange"><%= t('logout') %></button>
          </form>
        <% } else { %>
          <p class="text-xl mb-6"><%= t('welcome', 'Welcome!') %> <%= t('please_login', 'Please log in to continue.') %></p>
          <a href="/login" class="block w-full text-center bg-grumpy-orange hover:bg-grumpy-dark2 text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition mb-3 border border-grumpy-orange"><%= t('login') %></a>
          <a href="/register" class="block w-full text-center bg-grumpy-dark2 hover:bg-grumpy-orange text-grumpy-offwhite py-3 rounded-lg font-semibold shadow transition border border-grumpy-orange"><%= t('register') %></a>
        <% } %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
