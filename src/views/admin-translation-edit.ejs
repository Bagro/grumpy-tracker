<%- include('partials/header', { user }) %>
<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4"><%= t('admin.translations.editing', 'Editing translations for') %> <span class="font-mono"><%= lang %></span></h1>
  <% if (success && success.length) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4">
      <%= success[0] %>
    </div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
      <%= error[0] %>
    </div>
  <% } %>
  <form method="post" action="/admin/translations/<%= lang %>" class="space-y-4">
    <% Object.keys(translations).forEach(function(key) { %>
      <div>
        <label class="block font-semibold mb-1" for="key-<%= key %>"><%= key %></label>
        <input type="text" id="key-<%= key %>" name="translations[<%= key %>]" value="<%= translations[key] %>" class="w-full border rounded px-2 py-1" />
      </div>
    <% }) %>
    <button type="submit" class="bg-grumpy-orange text-grumpy-offwhite px-4 py-2 rounded hover:bg-grumpy-dark2 hover:text-grumpy-orange border border-grumpy-orange transition font-semibold">
      <%= t('admin.translations.save', 'Save Changes') %>
    </button>
    <a href="/admin/translations" class="ml-4 text-grumpy-orange hover:underline"><%= t('admin.back', 'Back') %></a>
  </form>
</div>
<%- include('partials/footer') %>
